     6                                  ;A continuación estan unas etiquetas con sus respectivas llamadas al sistema
     7                                  sys_exit 	equ 1 ;salir del programa
     8                                  sys_read 	equ 3 ;leer y almacenar
     9                                  sys_write 	equ 4 ;escribir lo almacenado
    10                                  sys_open 	equ 5 ;abrir un archivo
    11                                  sys_close 	equ 6 ;cerrar un archivo
    12                                  sys_create 	equ 8 ;crear un archivo
    13                                  stdin 		equ 0 ;standart input
    14                                  stdout 		equ 1 ;standart output
    15                                  ;--------------------------------------------------------------------------------------------------------
    16                                  section .bss ;sección de datos no inicializados
    17                                  ;--------------------------------------------------------------------------------------------------------
    18                                  section .data ;sección de datos inicializados
    19                                  
    20 00000000 486F6C61204D756E64-     mensaje: db "Hola Mundo!",10 ;mensaje en bytes conteniendo Hola Mundo! junto a un cambio de linea (10)
    21 00000009 6F210A             
    22                                  largo: equ $-mensaje ;establecemos el largo del mensaje como la cantidad de bytes desde este momento en 
    23                                  				     ;memoria menos el puntero a mensaje
    24                                  ;--------------------------------------------------------------------------------------------------------
    25                                  section .text ;sección de código del programa
    26                                  
    27                                  	global _start 
    28                                  
    29                                  _start:
    30 00000000 90                      	nop ;no ejecutamos acción
    31                                  imprime: ;etiqueta que indica que vamos a imprimir
    32 00000001 B804000000              	mov eax, sys_write ;indico al eax que vamos a imprimir
    33 00000006 BB01000000              	mov ebx, stdout ;indico que vamos a imprimir en el standart output
    34 0000000B B9[00000000]            	mov ecx, mensaje ;paso como parámetro el puntero del mensaje
    35 00000010 BA0C000000              	mov edx, largo ;indico cuantos bytes vamos a imprimir
    36 00000015 CD80                    	int 80h ;ejecutamos lo anterior
    37                                  cierra: ;etiqueta que indica que vamos a cerrar el programa
    38 00000017 B801000000              	mov eax, sys_exit ;indico que vamos a cerrar el programa
    39 0000001C 31DB                    	xor ebx, ebx ;limpio el registro
    40 0000001E CD80                    	int 80h ;ejecutamos lo anterior
